/* pages/application/application.wxss */

.title{
  position: absolute;
  height: 4vh;
  width: 100%;
  background-color: rgba(255, 255, 255, 1);
  top: 0rpx;
  z-index: 5;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.container{
  height:100vh;
  width:750rpx;
}

.canvas{
  height: 100vh;
  width:750rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  background-color: rgb(237,189,101);
  /* z-index:-1; */
}

.shade{
  position: absolute;
  z-index: 10;
  top: 0rpx;
  left: 0rpx;
  height: 100vh;
  width:750rpx;
  background-color: rgba(0,0,0,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.shade>.container{
  width: 600rpx;
  height: 38vh;
  background-color: white;
  position: relative;
  top: -5vh;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 5rpx gray;
}

.shade>.container>.window{
  /* border: 1px solid; */
  height: 85%;
  width: 95%;
  position: absolute;
  top: 10%;
}

.hidebar{
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 3vh;
  /* background-color: #d3d3d3; */
  border-bottom: 1rpx solid rgb(223, 223, 223);
  display: flex;
  justify-content: center;
}

.hidebar>image{
  height: 80%;
  width: 40rpx;
  margin-top: .25vh;
}

.select{
  height: 38vh;
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  border: 2rpx solid;
  border-bottom: 0rpx;
  box-sizing: border-box;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
  z-index:5;
}

.select>.container{
  position: absolute;
  top: 3vh;
  height: 90%;
  width: 95%;
  /* border: 1px solid; */
  /* display: flex;
  flex-direction: column;
  justify-content: space-around; */
}

.icons{
  position: absolute;
  right: 30rpx;
  bottom:40vh;
  width: 150rpx;
  height: 16vh;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 15rpx lightgray;
  border: 10rpx double;
}

.shorts{
  position: absolute;
  left: calc((750rpx - 200rpx) / 2);
  bottom: 0vh;
  height: 5vh;
  width: 200rpx;
  background-color: white;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  display: flex;
  align-items:center;
  box-shadow: 0rpx 0rpx 20rpx rgb(141, 141, 141);
  border: 5rpx solid gray;

  overflow: hidden;
  border-bottom: 0rpx;
  border-top: 0rpx;
}

.shorts>.short{
  width: 100%;
  height: 4.5vh;
  line-height: 4vh;
  font-weight: bold;
  text-align: center;
  box-sizing: border;
}
.short-selecting{
  border-top: 30rpx solid green;
}
.short-queuing{
  border-top: 30rpx solid rgb(255, 255, 78);
}
.short-scheduling{
  border-top: 30rpx solid blue;
}
.short-working{
  border-top: 30rpx solid red;
}

.select>.container>.picker{
  /* display: block; */
  /* border:1px solid; */
  position: absolute;
  height: 8vh;
  width: 80%;
}

.select>.container>.picker-position{
  top: 4vh;
}

.select>.container>.picker-soil{
  top:14vh;
}

.select>.container>.picker view{
  text-align: center;
  border-bottom: 4rpx solid;
  height: 6vh;
  line-height: 6vh;
  font-size: 32rpx;
  font-weight: bold;
}

.select>.container>button{
  position: absolute;
  height: 90rpx;
  width: 560rpx;
  bottom: 10rpx;
}

.window-queuing{
  /* border: 1px solid; */
}

.window-queuing>.title{
  /* border: 1px solid; */
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 0rpx;
  height: 6vh;
  line-height: 6vh;
  border-radius: 0rpx;
}

.window-queuing>.note{
  position: absolute;
  top: 8vh;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
}

.window-queuing>progress{
  position: absolute;
  top: 15vh;
  width: 100%;
  font-size: 28rpx;
}

.window-queuing>.count{
  position: absolute;
  top: 18vh;
  right: 11rpx;
  font-size: 28rpx;
}

.window-queuing>button{
  position: absolute;
  top: 26vh;
  width: 100%;
  height: 6vh;
  line-height: 6vh;
  left: 0%;
}

.window-scheduling{
  /* border: 1px solid; */
}


.window-scheduling>.title{
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 0rpx;
  height: 6vh;
  line-height: 6vh;
  border-radius: 0rpx;
}

.window-scheduling>.note{
  position: absolute;
  /* top: 8vh; */
  width: 80%;
  left: 10%;
  font-size: 30rpx;
  text-align: center;
}
.window-scheduling>.note1{
  top: 7vh;
}

.window-scheduling>.note2{
  top:20vh;
}

.window-scheduling>progress{
  width: 100%;
  position: absolute;
  top: 14vh;
}

.window-working{
  /* border: 1px solid; */
}

.window-working>.title{
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  position: absolute;
  top: 0rpx;
  height: 6vh;
  line-height: 6vh;
  border-radius: 0rpx;
}

.window-working>.note{
  position: absolute;
  width: 100%;
  text-align: center;
  top: 6vh;
}

.window-working>.info{
  position: absolute;
  font-weight: bold;
  /* top: 13vh; */
  font-size: 30rpx;
  width: 100%;
  text-align: center;
}

.window-working>.info1{
  top: 10vh;
}

.window-working>.info2{
  top: 14vh;
}

.window-working>.info3{
  top: 18vh;
}

.window-working>.info4{
  top: 22vh;
}

.window-working>button{
  top: 27vh;
  width: 90%;
  height: 6vh;
  line-height: 6vh;
}
.legends-container{
  position: absolute;
  top: 3.5vh;
  width: 100%;
}
.legend{
  /* border: 1px solid; */
  height: 3vh;
  width: 90%;
  margin: 8rpx auto;
  display: flex;
  justify-content: space-between;
}

.legend>image{
  height: 4vh;
  width: 60rpx;
  position: relative;
  top: -.5vh;
}
.legend>view{
  height: 3vh;
  line-height: 3vh;
}
.icons>.title{
  width: 100%;
  text-align: center;
}

.canvas>.map{
  height: 100%;
  width:100%;
  position: absolute;
  top: 0rpx;
  left:0rpx;
  overflow: scroll;
  /* z-index: 18; */
  /* background-color: red; */
}

.canvas>.vehicle{
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
}
.canvas>.map>.pit{
  position:absolute;
  background-color: rgb(138, 112, 27);
  box-sizing: border-box;
  border: 3px solid brown;
  color: white;
  text-align: center;
}

.adjust{
  position: absolute;
  left: 20rpx;
  top: 30vh;
  height: 16vh;
  width:70rpx;
  background-color: white;
  z-index: 10;
  border-radius: 10rpx;
  overflow: hidden;
  border: 5rpx solid gray;
}
.adjust>.button{
  width: 80rpx;
  height: 60rpx;
  position: absolute;
  background-color: #f3f3f3;
  border-radius: 0rpx;
}
.adjust>.add{
  top: 0rpx;
}

.adjust>.sub{
  bottom: 0rpx;
}

.adjust>view{
  height: 6vh;
  position: absolute;
  top: 5vh;
  text-align: center;
  line-height: 6vh;
  width: 100%;
  font-weight: bold;
}

.tcpConn{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  border: 2rpx solid;
  border-left: 0rpx;
  border-top: 0rpx;
  height: 5vh;
  width: 180rpx;
  background-color: #f3f3f3;
  border-bottom-right-radius: 10rpx;
}

.tcpConn>.tip{
  background-color: red;
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 25rpx;
  width: 25rpx;
  border-radius: 50%;
}
.tcpConn>.note{
  /* border: 1px solid; */
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 100rpx;
  height: 4vh;
}

.tcpinfo{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 40vh;
  width: 600rpx;
  background-color: white;
}

.tcpinfo>.title{
  margin: auto;
  margin-top: 4vh;
  text-align: center;
  font-size: 40rpx;
}

.tcpinfo>.inputview{
  margin:auto;
  /* border: 1px solid; */
  width: 60%;
}

.tcpinfo>.ipaddress{
  margin-top: 12vh;
}

.tcpinfo>.port{
  margin-top: 4vh;
}

.tcpinfo>.inputview>label{
  display: block;
  float:left;
  margin-right: 30rpx;
}

.tcpinfo>.inputview>input{
  font-size: 30rpx;
  border-bottom: 2rpx solid gray;
  text-align: left;
}

.tcpinfo>button{
  height: 6vh;
  width: 200rpx;
  position: absolute;
  background-color: lightgray;
  line-height: 6vh;
}

.tcpinfo>.btn-cancel{
  left: 80rpx;
  bottom: 5vh;
}

.tcpinfo>.btn-connect{
  right:80rpx;
  bottom:5vh;
}

.version-tag{
  position: absolute;
  top:0rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 5vh;
  width: auto;
  padding: 0rpx 20rpx;
  background-color: #f3f3f3;
  z-index: 11;
  text-align: center;
  line-height: 5vh;
  border-bottom-left-radius:12rpx ;
  border-bottom-right-radius: 12rpx;
  border: 2rpx solid;
  border-top: 0rpx;
}